#!/usr/bin/env python3

import sys
import os
import morfeus

def usage():
    p = os.path.basename(sys.argv[0])
    sys.stderr.write("""
{p} - Control moRFeus mixer/signal generator
Usage: {p} <name> [<value>]
Example:
  $ {p} mode
  MIXER
  $ {p} mode GENERATOR
  $ {p} mode
  GENERATOR
  $ {p} freq 120000000
  $ {p} bias 1
  $ {p} current 1
""".strip().format(**locals()) + "\n")
    sys.exit(0)

def main():
    if len(sys.argv) < 2:
        usage()

    key = sys.argv[1]
    val = sys.argv[2] if len(sys.argv) >= 3 else None

    mrf = morfeus.MoRFeus()

    if not hasattr(mrf, key):
        sys.stderr.write("ERROR: Unknown key: %s\n" % key)
        usage()

    if val is None:
        ret = getattr(mrf, key)
        if key == 'mode':
            print(morfeus.Mode(ret).name)
        else:
            print(ret)
    else:
        if key == 'mode':
            val = morfeus.Mode[val.upper()]
        else:
            val = int(val)
        setattr(mrf, key, val)

if __name__ == '__main__':
    main()
